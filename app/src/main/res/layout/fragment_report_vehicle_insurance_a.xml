<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".report.ReportVehicleInsuranceAFragment"
                                             android:id="@+id/constraintLayout">


    <Button
            android:text="Opslaan "
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/button_report_vehicle_insurance_a_confirm"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/text_report_vehicle_insurance_a_title"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_report_vehicle_insurance_a_confirm"
            app:layout_constraintVertical_bias="0.0">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
            <android.support.design.widget.TextInputLayout android:layout_height="wrap_content"
                                                           android:layout_width="match_parent"
                                                           android:id="@+id/edit_report_vehicle_insurance_a_greenCard"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           android:layout_marginLeft="8dp"
                                                           android:layout_marginStart="8dp"
                                                           android:layout_marginTop="8dp"
                                                           app:layout_constraintTop_toTopOf="parent">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="wrap_content"
                        android:id="@+id/textedit_report_vehicle_insurance_a_greenCard"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="Nummer groene kaart"
                        android:ems="10"
                />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_height="wrap_content"
                                                           android:layout_width="match_parent"
                                                           android:id="@+id/edit_report_vehicle_insurance_a_insuranceNumber"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           android:layout_marginLeft="8dp"
                                                           android:layout_marginStart="8dp"
                                                           android:layout_marginTop="8dp"
                                                           app:layout_constraintTop_toBottomOf="@+id/edit_report_vehicle_insurance_a_greenCard">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="wrap_content"
                        android:id="@+id/textedit_report_vehicle_insurance_a_insuranceNumber"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="Verzekeringsnummer"
                        android:ems="10"
                />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_height="wrap_content"
                                                           android:layout_width="match_parent"
                                                           android:id="@+id/edit_report_vehicle_insurance_a_insurer"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           android:layout_marginLeft="8dp"
                                                           android:layout_marginStart="8dp"
                                                           android:layout_marginTop="16dp"
                                                           app:layout_constraintTop_toBottomOf="@+id/edit_report_vehicle_insurance_a_insuranceNumber">

                <Spinner
                        android:layout_width="wrap_content"
                        android:id="@+id/spinner_report_vehicle_insurance_a_insurer"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="Verzekeraar"
                        android:ems="10"
                />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_height="wrap_content"
                                                           android:layout_width="match_parent"
                                                           android:id="@+id/edit_report_vehicle_insurance_a_expires"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           android:layout_marginLeft="8dp"
                                                           android:layout_marginStart="8dp"
                                                           android:layout_marginTop="8dp"
                                                           app:layout_constraintTop_toBottomOf="@+id/edit_report_vehicle_insurance_a_insurer">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="wrap_content"
                        android:id="@+id/textedit_report_vehicle_insurance_a_expires"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:clickable="true"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Geldig tot"
                        android:ems="10"
                />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_height="wrap_content"
                                                           android:layout_width="match_parent"
                                                           android:id="@+id/edit_report_vehicle_insurance_a_email"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           android:layout_marginLeft="8dp"
                                                           android:layout_marginStart="8dp"
                                                           android:layout_marginTop="8dp"
                                                           app:layout_constraintTop_toBottomOf="@+id/edit_report_vehicle_insurance_a_expires">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="wrap_content"
                        android:id="@+id/textedit_report_vehicle_insurance_a_email"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="E-mail agentschap"
                        android:ems="10"
                />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout android:layout_height="wrap_content"
                                                           android:layout_width="match_parent"
                                                           android:id="@+id/edit_report_vehicle_insurance_a_phone"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           android:layout_marginLeft="8dp"
                                                           android:layout_marginStart="8dp"
                                                           android:layout_marginTop="8dp"
                                                           app:layout_constraintTop_toBottomOf="@+id/edit_report_vehicle_insurance_a_email">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="wrap_content"
                        android:id="@+id/textedit_report_vehicle_insurance_a_phone"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="Telefoon agentschap"
                        android:ems="10"
                />
            </android.support.design.widget.TextInputLayout>


        </android.support.constraint.ConstraintLayout>

    </ScrollView>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verzekering voertuig"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:id="@+id/text_report_vehicle_insurance_a_title"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>