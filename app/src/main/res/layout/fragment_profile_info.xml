<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".profile.ProfileInfoFragment"
                                             android:id="@+id/constraintLayout">
    <TextView
            android:text="Persoonlijke gegevens"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>

    <android.support.design.widget.TextInputLayout android:layout_height="wrap_content"
                                                   android:layout_width="match_parent"
                                                   android:id="@+id/edit_profile_info_firstname"
                                                   app:layout_constraintTop_toBottomOf="@+id/textView"
                                                   app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                                                   android:layout_marginStart="8dp" android:layout_marginTop="16dp"
    >
        <android.support.design.widget.TextInputEditText
                android:layout_width="wrap_content"
                android:id="@+id/textedit_profile_info_firstname"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="First Name"
                android:ems="10"
        />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout android:layout_height="wrap_content"
                                                   android:layout_width="match_parent"
                                                   android:id="@+id/edit_profile_info_lastname"
                                                   android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edit_profile_info_firstname"
                                                   app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                                                   android:layout_marginStart="8dp"
    >

        <android.support.design.widget.TextInputEditText
                android:layout_width="wrap_content"
                android:id="@+id/textedit_profile_info_lastname"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Last Name"
                android:ems="10"
        />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout android:layout_height="wrap_content"
                                                   android:layout_width="match_parent"
                                                   android:id="@+id/edit_profile_info_email"
                                                   android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edit_profile_info_lastname"
                                                   app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                                                   android:layout_marginStart="8dp"
    >

        <android.support.design.widget.TextInputEditText
                android:layout_width="wrap_content"
                android:id="@+id/textedit_profile_info_email"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="E-Mail"
                android:ems="10"
        />
    </android.support.design.widget.TextInputLayout>

    <Button
            android:text="Opslaan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_profile_info_confirm" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>


</android.support.constraint.ConstraintLayout>
