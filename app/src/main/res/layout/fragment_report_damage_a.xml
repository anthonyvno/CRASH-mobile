<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".report.ReportDamageAFragment"
                                             android:id="@+id/ConstraintLayout">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.AppCompatSeekBar
            android:layout_width="match_parent"
            android:id="@+id/seekbar_home"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:focusableInTouchMode="false"
            android:progressTint="@color/white"
            android:layout_height="wrap_content" android:layout_marginTop="53dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:progress="35"
            android:thumb="@color/white"
    />
    <Button
            android:text="Volgende >"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/button_report_damage_a_confirm"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schade voertuig"
            android:id="@+id/text_report_damage_a_title"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="30sp" android:textColor="@color/color_white" android:textStyle="bold"/>
    <ScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@+id/text_report_damage_a_title"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button_report_damage_a_confirm"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/scrollView2">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cl">
            <TextView
                    android:text="Duid met een pijl aan waar uw voertuig voor het eerst geraakt werd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView14"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:textStyle="bold"/>
            <com.example.europeesaanrijdingsformulier.drawview.CustomDamageView
                    app:layout_constraintTop_toBottomOf="@id/textView14"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@color/white"
                    android:layout_width="match_parent" android:layout_marginTop="8dp"
                    android:layout_height="0dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/text_report_damage_a_comment"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp" android:id="@+id/damageview_a"/>
            <android.support.design.widget.FloatingActionButton
                    android:src="@drawable/ic_undo_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:id="@+id/button_report_damage_a_undo" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/damageview_a"
                    app:layout_constraintStart_toStartOf="@+id/damageview_a" android:layout_marginStart="8dp"
                    />
            <android.support.design.widget.FloatingActionButton
                    android:src="@drawable/ic_redo_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:id="@+id/button_report_damage_a_redo" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/damageview_a"
                    app:layout_constraintStart_toEndOf="@+id/button_report_damage_a_undo" android:layout_marginStart="8dp"
                    />
            <android.support.design.widget.FloatingActionButton
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:id="@+id/button_report_damage_a_clear"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/damageview_a" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/damageview_a"
                    android:tint="@color/zxing_status_text"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:hint="Opmerkingen"
                    android:background="@color/white"
                    android:ems="10"
                    android:id="@+id/text_report_damage_a_comment"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:importantForAutofill="no"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>