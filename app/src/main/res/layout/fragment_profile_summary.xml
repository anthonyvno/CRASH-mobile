<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".profile.ProfileSummaryFragment"
                                             android:id="@+id/constraintLayout">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@+id/cardview2_profile_summary"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:alpha="0.85"
            android:id="@+id/cardview3_profile_summary"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp">
        <LinearLayout
                android:orientation="horizontal"

                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:contentDescription="Afbeelding auto"
                    android:background="@drawable/icons8car80"
                    android:scaleType="centerCrop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView_vehicle"
                    android:layout_weight="1"
            />
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/linear_vehicles">
                <TextView
                        android:text="Voertuigen"
                        android:textSize="20dp"
                        android:layout_marginTop="15dp"
                        android:textAlignment="center"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content" android:id="@+id/textView10"
                />
                <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/text_profile_summary_vehicle"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
            android:text="Mijn profiel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="45dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/text_profile_summary_title"
            android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:alpha="0.85"
            android:id="@+id/cardview1_profile_summary"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/text_profile_summary_title">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:contentDescription="Icon user"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageViewProfile"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"
                    android:background="@drawable/icons8user96"
            />
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Persoonlijke gegevens"
                        android:textSize="20dp"
                        android:layout_marginTop="15dp"
                        android:textAlignment="center"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content" android:id="@+id/textView4"/>
                <TextView
                        android:text=""
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/text_profile_summary_personal"
                        android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@+id/cardview1_profile_summary"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:alpha="0.85"
            android:id="@+id/cardview2_profile_summary"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:contentDescription="Icon License"
                    android:background="@drawable/icons8certificate80"
                    android:layout_width="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView_License"
                    android:layout_weight="1"
            />
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
            android:id="@+id/linear_license">
                <TextView
                        android:text="Rijbewijs"
                        android:textSize="20dp"
                        android:layout_marginTop="15dp"
                        android:textAlignment="center"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content" android:id="@+id/textView5"/>
                <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/text_profile_summary_license"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigationView"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:itemBackground="@color/colorPrimary"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:menu="@menu/navigation_bottom" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
</android.support.constraint.ConstraintLayout>